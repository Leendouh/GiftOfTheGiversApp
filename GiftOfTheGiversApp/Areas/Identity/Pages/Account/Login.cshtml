@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<div class="row justify-content-center">
    <div class="col-md-8 col-lg-6">
        <div class="card shadow border-0">
            <div class="card-header bg-primary text-white text-center py-4">
                <h2 class="fw-bold mb-0">
                    <i class="bi bi-box-arrow-in-right me-2"></i>Welcome Back
                </h2>
                <p class="mb-0 mt-2">Sign in to your Gift of the Givers account</p>
            </div>
            <div class="card-body p-5">
                <div class="row">
                    <div class="col-lg-8">
                        <form id="account" method="post">
                            <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                            <div class="form-floating mb-4">
                                <input asp-for="Input.Email" class="form-control form-control-lg"
                                       autocomplete="username" aria-required="true"
                                       placeholder="name@example.com" />
                                <label asp-for="Input.Email" class="form-label text-muted">
                                    <i class="bi bi-envelope me-2"></i>Email Address
                                </label>
                                <span asp-validation-for="Input.Email" class="text-danger small"></span>
                            </div>

                            <div class="form-floating mb-4">
                                <input asp-for="Input.Password" class="form-control form-control-lg"
                                       autocomplete="current-password" aria-required="true"
                                       placeholder="password" />
                                <label asp-for="Input.Password" class="form-label text-muted">
                                    <i class="bi bi-lock me-2"></i>Password
                                </label>
                                <span asp-validation-for="Input.Password" class="text-danger small"></span>
                            </div>

                            <div class="form-check mb-4">
                                <input class="form-check-input" asp-for="Input.RememberMe" />
                                <label class="form-check-label text-muted" asp-for="Input.RememberMe">
                                    Keep me signed in
                                </label>
                            </div>

                            <div class="d-grid mb-4">
                                <button id="login-submit" type="submit" class="btn btn-primary btn-lg py-3">
                                    <i class="bi bi-box-arrow-in-right me-2"></i>Sign In
                                </button>
                            </div>

                            <div class="text-center">
                                <p class="mb-2">
                                    <a id="forgot-password" asp-page="./ForgotPassword" class="text-decoration-none">
                                        <i class="bi bi-key me-1"></i>Forgot your password?
                                    </a>
                                </p>
                                <p class="mb-2">
                                    <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="text-decoration-none">
                                        <i class="bi bi-person-plus me-1"></i>Create new account
                                    </a>
                                </p>
                                <p class="mb-0">
                                    <a id="resend-confirmation" asp-page="./ResendEmailConfirmation" class="text-decoration-none">
                                        <i class="bi bi-envelope me-1"></i>Resend email confirmation
                                    </a>
                                </p>
                            </div>
                        </form>
                    </div>

                    <div class="col-lg-4 mt-4 mt-lg-0">
                        <div class="border-start-lg ps-lg-4">
                            <div class="text-center mb-4">
                                <div class="bg-light rounded-circle d-inline-flex align-items-center justify-content-center" style="width: 80px; height: 80px;">
                                    <i class="bi bi-heart-fill text-primary fs-2"></i>
                                </div>
                            </div>
                            <h6 class="text-center text-muted mb-3">Join Our Mission</h6>
                            <ul class="list-unstyled small text-muted">
                                <li class="mb-2">
                                    <i class="bi bi-check-circle text-success me-2"></i>Coordinate disaster relief
                                </li>
                                <li class="mb-2">
                                    <i class="bi bi-check-circle text-success me-2"></i>Manage volunteer assignments
                                </li>
                                <li class="mb-2">
                                    <i class="bi bi-check-circle text-success me-2"></i>Track mission progress
                                </li>
                                <li class="mb-0">
                                    <i class="bi bi-check-circle text-success me-2"></i>Make a real impact
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- External Login Section (if needed) -->
        @if ((Model.ExternalLogins?.Count ?? 0) > 0)
        {
            <div class="card mt-4 shadow-sm">
                <div class="card-body text-center py-4">
                    <h6 class="text-muted mb-3">Or sign in with</h6>
                    <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                        <div class="d-grid gap-2 d-sm-flex justify-content-sm-center">
                            @foreach (var provider in Model.ExternalLogins!)
                            {
                                <button type="submit" class="btn btn-outline-primary btn-sm" name="provider" value="@provider.Name"
                                        title="Log in using your @provider.DisplayName account">
                                    <i class="bi bi-@provider.DisplayName.ToLower() me-2"></i>@provider.DisplayName
                                </button>
                            }
                        </div>
                    </form>
                </div>
            </div>
        }
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}