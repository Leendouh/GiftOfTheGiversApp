@model IEnumerable<GiftOfTheGiversApp.Models.Assignment>
@{
    ViewData["Title"] = "My Assignments";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1><i class="bi bi-person-check"></i> My Assignments</h1>
    <div>
        <a class="btn btn-outline-secondary" asp-action="Index">
            <i class="bi bi-people"></i> All Assignments
        </a>
    </div>
</div>

<div class="card">
    <div class="card-header bg-success text-white">
        <h5 class="mb-0"><i class="bi bi-list-check"></i> My Current Assignments</h5>
    </div>
    <div class="card-body">
        @if (!Model.Any())
        {
            <div class="alert alert-info">
                <h5>No assignments found</h5>
                <p>You haven't been assigned to any disasters yet.</p>
            </div>
        }
        else
        {
            <div class="row">
                @foreach (var assignment in Model)
                {
                    <div class="col-md-6 mb-4">
                        <div class="card h-100 border-success">
                            <div class="card-header bg-success text-white">
                                <div class="d-flex justify-content-between align-items-center">
                                    <h6 class="mb-0">@assignment.Disaster?.Name</h6>
                                    <span class="badge bg-light text-dark">@assignment.Status</span>
                                </div>
                            </div>
                            <div class="card-body">
                                <div class="mb-3">
                                    <span class="badge bg-info fs-6">@assignment.RoleInAssignment</span>
                                </div>

                                <div class="mb-2">
                                    <small class="text-muted">
                                        <i class="bi bi-geo-alt"></i> <strong>Location:</strong> @assignment.Disaster?.Location<br>
                                        <i class="bi bi-calendar"></i> <strong>Assigned:</strong> @assignment.AssignmentDate.ToString("MMM dd, yyyy")<br>
                                        <i class="bi bi-person"></i> <strong>Assigned By:</strong> @assignment.AssignedBy?.FullName
                                    </small>
                                </div>

                                <p class="small">@assignment.Disaster?.Description</p>
                            </div>
                            <div class="card-footer">
                                <small class="text-muted">
                                    Disaster Status: <span class="badge @GetDisasterStatusBadge(assignment.Disaster?.Status)">@assignment.Disaster?.Status</span>
                                </small>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
    </div>
</div>

@functions {
    public string GetDisasterStatusBadge(string status)
    {
        return status?.ToLower() switch
        {
            "active" => "bg-warning",
            "contained" => "bg-info",
            "resolved" => "bg-success",
            _ => "bg-secondary"
        };
    }
}