@model IEnumerable<GiftOfTheGiversApp.Models.ResourceCategory>
@{
    ViewData["Title"] = "Resource Categories";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1><i class="bi bi-tags"></i> Resource Categories</h1>
    <a class="btn btn-primary" asp-action="Create">
        <i class="bi bi-plus-circle"></i> Add Category
    </a>
</div>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="card">
    <div class="card-header bg-primary text-white">
        <h5 class="mb-0"><i class="bi bi-list-check"></i> All Categories</h5>
    </div>
    <div class="card-body">
        @if (!Model.Any())
        {
            <div class="alert alert-info">
                <h5>No categories found</h5>
                <p>There are no resource categories yet. <a asp-action="Create">Create the first category</a> to get started.</p>
            </div>
        }
        else
        {
            <div class="row">
                @foreach (var category in Model)
                {
                    <div class="col-md-6 mb-3">
                        <div class="card h-100">
                            <div class="card-body">
                                <h5 class="card-title">@category.CategoryName</h5>
                                <p class="card-text text-muted">@category.Description</p>
                                <div class="btn-group">
                                    <a class="btn btn-sm btn-warning" asp-action="Edit" asp-route-id="@category.Id">
                                        <i class="bi bi-pencil"></i> Edit
                                    </a>
                                    <a class="btn btn-sm btn-info" asp-controller="Resources" asp-action="Index" asp-route-categoryId="@category.Id">
                                        <i class="bi bi-eye"></i> View Resources
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
    </div>
</div>