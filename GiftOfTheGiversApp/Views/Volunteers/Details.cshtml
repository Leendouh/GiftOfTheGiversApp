@model GiftOfTheGiversApp.Models.Volunteer
@{
    ViewData["Title"] = "Volunteer Details";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1><i class="bi bi-person-badge"></i> Volunteer Details</h1>
    <div>
        <a class="btn btn-outline-secondary" asp-action="Index">
            <i class="bi bi-arrow-left"></i> Back to Volunteers
        </a>
        <a class="btn btn-warning" asp-action="Edit" asp-route-id="@Model.Id">
            <i class="bi bi-pencil"></i> Edit
        </a>
    </div>
</div>

<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header bg-primary text-white">
                <h5 class="mb-0">Volunteer Information</h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <dl>
                            <dt>Full Name:</dt>
                            <dd>@Model.User?.FirstName @Model.User?.LastName</dd>

                            <dt>Email:</dt>
                            <dd>@Model.User?.Email</dd>

                            <dt>Date Registered:</dt>
                            <dd>@Model.DateRegistered.ToString("MMMM dd, yyyy")</dd>
                        </dl>
                    </div>
                    <div class="col-md-6">
                        <dl>
                            <dt>Availability Status:</dt>
                            <dd>
                                <span class="badge @GetAvailabilityBadge(Model.AvailabilityStatus)">
                                    @Model.AvailabilityStatus
                                </span>
                            </dd>

                            <dt>Address:</dt>
                            <dd>@(Model.Address ?? "Not provided")</dd>

                            <dt>Emergency Contact:</dt>
                            <dd>@(Model.EmergencyContact ?? "Not provided")</dd>
                        </dl>
                    </div>
                </div>

                <div class="mt-3">
                    <dt>Skills & Qualifications:</dt>
                    <dd>@Model.Skills</dd>
                </div>
            </div>
        </div>
    </div>
</div>

@functions {
    public string GetAvailabilityBadge(string status)
    {
        return status?.ToLower() switch
        {
            "available" => "bg-success",
            "busy" => "bg-warning",
            "unavailable" => "bg-danger",
            _ => "bg-secondary"
        };
    }
}