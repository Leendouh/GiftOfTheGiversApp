@model Volunteer
@using System.Security.Claims

@{
    ViewData["Title"] = "Volunteer Details";

    // Get current user ID safely
    var currentUserId = User.FindFirst(ClaimTypes.NameIdentifier)?.Value;
    var isOwner = Model.UserId == currentUserId;
    var isAdmin = User.IsInRole("Admin");
    var canEdit = isOwner || isAdmin;
}

<div class="row">
    <div class="col-md-8 mx-auto">
        <div class="card">
            <div class="card-header bg-info text-white">
                <h2 class="mb-0">@ViewData["Title"]</h2>
            </div>
            <div class="card-body">
                @if (TempData["SuccessMessage"] != null)
                {
                    <div class="alert alert-success alert-dismissible fade show" role="alert">
                        @TempData["SuccessMessage"]
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                }

                @if (TempData["ErrorMessage"] != null)
                {
                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                        @TempData["ErrorMessage"]
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                }

                <div class="row">
                    <div class="col-md-6">
                        <h5>Personal Information</h5>
                        <dl class="row">
                            <dt class="col-sm-4">Name:</dt>
                            <dd class="col-sm-8">@Model.User?.FullName</dd>

                            <dt class="col-sm-4">Email:</dt>
                            <dd class="col-sm-8">@Model.User?.Email</dd>

                            <dt class="col-sm-4">Phone:</dt>
                            <dd class="col-sm-8">@Model.User?.PhoneNumber</dd>
                        </dl>
                    </div>
                    <div class="col-md-6">
                        <h5>Volunteer Information</h5>
                        <dl class="row">
                            <dt class="col-sm-4">Status:</dt>
                            <dd class="col-sm-8">
                                <span class="badge @GetAvailabilityBadge(Model.AvailabilityStatus)">@Model.AvailabilityStatus</span>
                            </dd>

                            <dt class="col-sm-4">Registered:</dt>
                            <dd class="col-sm-8">@Model.DateRegistered.ToString("MMM dd, yyyy")</dd>

                            <dt class="col-sm-4">Emergency Contact:</dt>
                            <dd class="col-sm-8">@Model.EmergencyContact</dd>
                        </dl>
                    </div>
                </div>

                <div class="row mt-3">
                    <div class="col-12">
                        <h5>Skills & Qualifications</h5>
                        <div class="border rounded p-3 bg-light">
                            @Model.Skills
                        </div>
                    </div>
                </div>

                @if (!string.IsNullOrEmpty(Model.Address))
                {
                    <div class="row mt-3">
                        <div class="col-12">
                            <h5>Address</h5>
                            <p class="border rounded p-3 bg-light">@Model.Address</p>
                        </div>
                    </div>
                }

                <!-- Contact Information for Admins -->
                @if (isAdmin)
                {
                    <div class="row mt-3">
                        <div class="col-12">
                            <h5>Admin Information</h5>
                            <div class="border rounded p-3 bg-warning bg-opacity-10">
                                <dl class="row">
                                    <dt class="col-sm-3">User ID:</dt>
                                    <dd class="col-sm-9"><small class="text-muted">@Model.UserId</small></dd>

                                    <dt class="col-sm-3">Volunteer ID:</dt>
                                    <dd class="col-sm-9"><small class="text-muted">@Model.Id</small></dd>

                                    <dt class="col-sm-3">Contact:</dt>
                                    <dd class="col-sm-9">
                                        <a href="mailto:@Model.User?.Email" class="btn btn-sm btn-outline-primary">
                                            <i class="bi bi-envelope"></i> Email Volunteer
                                        </a>
                                    </dd>
                                </dl>
                            </div>
                        </div>
                    </div>
                }

                <div class="mt-4">
                    @if (canEdit)
                    {
                        <a class="btn btn-warning" asp-action="Edit" asp-route-id="@Model.Id">
                            <i class="bi bi-pencil"></i> Edit Profile
                        </a>
                    }

                    <a class="btn btn-secondary" asp-action="Index">
                        <i class="bi bi-arrow-left"></i> Back to List
                    </a>

                    <!-- Quick action for coordinators/admins -->
                    @if (isAdmin && Model.AvailabilityStatus != "Available")
                    {
                        <a class="btn btn-success" href="mailto:@Model.User?.Email?subject=Volunteer%20Opportunity&body=Hello%20@Model.User?.FirstName,%0A%0AWe%20have%20an%20urgent%20volunteer%20opportunity%20and%20noticed%20you%20are%20currently%20marked%20as%20@Model.AvailabilityStatus.%20Are%20you%20available%20to%20help%3F%0A%0AThank%20you,%0AGift%20of%20the%20Givers%20Team">
                            <i class="bi bi-send"></i> Contact for Help
                        </a>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@functions {
    public string GetAvailabilityBadge(string status)
    {
        return status?.ToLower() switch
        {
            "available" => "bg-success",
            "busy" => "bg-warning",
            "unavailable" => "bg-secondary",
            _ => "bg-secondary"
        };
    }
}