@model IEnumerable<GiftOfTheGiversApp.Models.Resource>
@{
    ViewData["Title"] = "Low Stock Alert";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1><i class="bi bi-exclamation-triangle"></i> Low Stock Alert</h1>
    <div>
        <a class="btn btn-primary" asp-action="Create">
            <i class="bi bi-plus-circle"></i> Add Resource
        </a>
        <a class="btn btn-outline-secondary" asp-action="Index">
            <i class="bi bi-arrow-left"></i> All Resources
        </a>
    </div>
</div>

<div class="card">
    <div class="card-header bg-warning text-dark">
        <h5 class="mb-0"><i class="bi bi-bell"></i> Resources Needing Attention</h5>
    </div>
    <div class="card-body">
        @if (!Model.Any())
        {
            <div class="alert alert-success">
                <h5>All Good!</h5>
                <p>No resources are currently low on stock. Great job managing the inventory!</p>
            </div>
        }
        else
        {
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead class="table-warning">
                        <tr>
                            <th>Resource Name</th>
                            <th>Category</th>
                            <th>Current Stock</th>
                            <th>Alert Level</th>
                            <th>Unit</th>
                            <th>Urgency</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var resource in Model)
                        {
                            <tr>
                                <td>
                                    <strong>@resource.Name</strong>
                                </td>
                                <td>
                                    <span class="badge bg-info">@resource.Category?.CategoryName</span>
                                </td>
                                <td>
                                    <span class="badge bg-danger">@resource.CurrentQuantity</span>
                                </td>
                                <td>@resource.ThresholdQuantity</td>
                                <td>@resource.UnitOfMeasure</td>
                                <td>
                                    @if (resource.CurrentQuantity == 0)
                                    {
                                        <span class="badge bg-danger">Out of Stock</span>
                                    }
                                    else if (resource.CurrentQuantity <= resource.ThresholdQuantity / 2)
                                    {
                                        <span class="badge bg-danger">Critical</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-warning">Low</span>
                                    }
                                </td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <a class="btn btn-sm btn-info" asp-action="Details" asp-route-id="@resource.Id">
                                            <i class="bi bi-eye"></i>
                                        </a>
                                        <a class="btn btn-sm btn-warning" asp-action="Edit" asp-route-id="@resource.Id">
                                            <i class="bi bi-pencil"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>
</div>