@model GiftOfTheGiversApp.Models.Resource
@{
    ViewData["Title"] = "Resource Details";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1><i class="bi bi-eye"></i> Resource Details</h1>
    <div>
        <a class="btn btn-outline-secondary" asp-action="Index">
            <i class="bi bi-arrow-left"></i> Back to Inventory
        </a>
    </div>
</div>

<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header bg-primary text-white">
                <h5 class="mb-0">Resource Information</h5>
            </div>
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-4">Resource Name:</dt>
                    <dd class="col-sm-8">@Model.Name</dd>

                    <dt class="col-sm-4">Category:</dt>
                    <dd class="col-sm-8">
                        <span class="badge bg-info">@Model.Category?.CategoryName</span>
                    </dd>

                    <dt class="col-sm-4">Description:</dt>
                    <dd class="col-sm-8">@Model.Description</dd>

                    <dt class="col-sm-4">Unit of Measure:</dt>
                    <dd class="col-sm-8">@Model.UnitOfMeasure</dd>

                    <dt class="col-sm-4">Current Quantity:</dt>
                    <dd class="col-sm-8">
                        <span class="badge @(Model.CurrentQuantity <= Model.ThresholdQuantity ? "bg-danger" : "bg-success")">
                            @Model.CurrentQuantity
                        </span>
                    </dd>

                    <dt class="col-sm-4">Low Stock Alert:</dt>
                    <dd class="col-sm-8">@Model.ThresholdQuantity</dd>

                    <dt class="col-sm-4">Stock Status:</dt>
                    <dd class="col-sm-8">
                        @if (Model.CurrentQuantity <= Model.ThresholdQuantity)
                        {
                            <span class="badge bg-danger">LOW STOCK</span>
                        }
                        else
                        {
                            <span class="badge bg-success">In Stock</span>
                        }
                    </dd>
                </dl>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card">
            <div class="card-header bg-info text-white">
                <h5 class="mb-0">Quick Actions</h5>
            </div>
            <div class="card-body">
                <div class="d-grid gap-2">
                    @if (User.IsInRole("Admin") || User.IsInRole("Coordinator"))
                    {
                        <a class="btn btn-warning" asp-action="Edit" asp-route-id="@Model.Id">
                            <i class="bi bi-pencil"></i> Edit Resource
                        </a>
                        <a class="btn btn-danger" asp-action="Delete" asp-route-id="@Model.Id">
                            <i class="bi bi-trash"></i> Delete Resource
                        </a>
                    }
                    <a class="btn btn-primary" asp-action="Create" asp-controller="Donations">
                        <i class="bi bi-heart"></i> Make Donation
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>