@model IEnumerable<GiftOfTheGiversApp.Models.Resource>

@{
    ViewData["Title"] = "Resources Inventory";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1><i class="bi bi-box-seam"></i> Resources Inventory</h1>
    <div>
        <a class="btn btn-primary" asp-action="Create">
            <i class="bi bi-plus-circle"></i> Add Resource
        </a>
        <a class="btn btn-warning" asp-action="LowStock">
            <i class="bi bi-exclamation-triangle"></i> Low Stock
        </a>
        <a class="btn btn-outline-secondary" asp-controller="ResourceCategories" asp-action="Index">
            <i class="bi bi-tags"></i> Manage Categories
        </a>
    </div>
</div>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="card">
    <div class="card-header bg-primary text-white">
        <h5 class="mb-0"><i class="bi bi-list-check"></i> All Resources</h5>
    </div>
    <div class="card-body">
        @if (!Model.Any())
        {
            <div class="alert alert-info">
                <h5>No resources found</h5>
                <p>There are no resources in the inventory yet. <a asp-action="Create">Add the first resource</a>.</p>
            </div>
        }
        else
        {
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead class="table-dark">
                        <tr>
                            <th>Resource Name</th>
                            <th>Category</th>
                            <th>Description</th>
                            <th>Current Stock</th>
                            <th>Unit</th>
                            <th>Status</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var resource in Model)
                        {
                            <tr>
                                <td>
                                    <strong>@resource.Name</strong>
                                </td>
                                <td>
                                    <span class="badge bg-info">@resource.Category?.CategoryName</span>
                                </td>
                                <td>@resource.Description</td>
                                <td>
                                    <span class="badge @(resource.IsLowStock ? "bg-danger" : "bg-success")">
                                        @resource.CurrentQuantity
                                    </span>
                                </td>
                                <td>@resource.UnitOfMeasure</td>
                                <td>
                                    @if (resource.IsLowStock)
                                    {
                                        <span class="badge bg-danger">Low Stock</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-success">In Stock</span>
                                    }
                                </td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <a class="btn btn-sm btn-info" asp-action="Details" asp-route-id="@resource.Id">
                                            <i class="bi bi-eye"></i>
                                        </a>
                                        @if (User.IsInRole("Admin") || User.IsInRole("Coordinator"))
                                        {
                                            <a class="btn btn-sm btn-warning" asp-action="Edit" asp-route-id="@resource.Id">
                                                <i class="bi bi-pencil"></i>
                                            </a>
                                            <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@resource.Id">
                                                <i class="bi bi-trash"></i>
                                            </a>
                                        }
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>
</div>