@model Disaster
@using System.Security.Claims
@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor

@{
    ViewData["Title"] = "Disaster Details";

   
}

<div class="row">
    <div class="col-md-8 mx-auto">
        <div class="card">
            <div class="card-header bg-info text-white">
                <h2 class="mb-0">@ViewData["Title"]</h2>
            </div>
            <div class="card-body">
                @if (TempData["SuccessMessage"] != null)
                {
                    <div class="alert alert-success alert-dismissible fade show" role="alert">
                        @TempData["SuccessMessage"]
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                }

                @if (TempData["ErrorMessage"] != null)
                {
                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                        @TempData["ErrorMessage"]
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                }

                <div class="row">
                    <div class="col-md-6">
                        <h5>Basic Information</h5>
                        <dl class="row">
                            <dt class="col-sm-4">Name:</dt>
                            <dd class="col-sm-8">@Model.Name</dd>

                            <dt class="col-sm-4">Location:</dt>
                            <dd class="col-sm-8">@Model.Location</dd>

                            <dt class="col-sm-4">Type:</dt>
                            <dd class="col-sm-8">@Model.DisasterType</dd>

                            <dt class="col-sm-4">Severity:</dt>
                            <dd class="col-sm-8">
                                <span class="badge @GetSeverityBadge(Model.SeverityLevel)">@Model.SeverityLevel</span>
                            </dd>
                        </dl>
                    </div>
                    <div class="col-md-6">
                        <h5>Status & Reporting</h5>
                        <dl class="row">
                            <dt class="col-sm-4">Status:</dt>
                            <dd class="col-sm-8">
                                <span class="badge @GetStatusBadge(Model.Status)">@Model.Status</span>
                            </dd>

                            <dt class="col-sm-4">Start Date:</dt>
                            <dd class="col-sm-8">@Model.StartDate.ToString("MMM dd, yyyy")</dd>

                            <dt class="col-sm-4">Reported By:</dt>
                            <dd class="col-sm-8">@Model.ReportedBy?.FullName</dd>

                            <dt class="col-sm-4">Affected:</dt>
                            <dd class="col-sm-8">
                                @if (Model.EstimatedAffected.HasValue)
                                {
                                    <text>@Model.EstimatedAffected.Value.ToString("N0") people</text>
                                }
                                else
                                {
                                    <text>Unknown</text>
                                }
                            </dd>
                        </dl>
                    </div>
                </div>

                <div class="row mt-3">
                    <div class="col-12">
                        <h5>Description</h5>
                        <div class="border rounded p-3 bg-light">
                            @Model.Description
                        </div>
                    </div>
                </div>

                <div class="mt-4">
                    @{
                        var currentUserId = User.FindFirstValue(ClaimTypes.NameIdentifier);
                        var isOwner = Model.ReportedById == currentUserId;
                        var isAdmin = User.IsInRole("Admin");
                        var isCoordinator = User.IsInRole("Coordinator");
                        var canEdit = isOwner || isAdmin;
                        var canResolve = isOwner || isAdmin || isCoordinator;
                    }

                    <!-- Edit Button - Owner or Admin -->
                    @if (canEdit)
                    {
                        <a class="btn btn-warning" asp-action="Edit" asp-route-id="@Model.Id">
                            <i class="bi bi-pencil"></i> Edit
                        </a>
                    }

                    <!-- Resolve Button - Owner, Admin, or Coordinator -->
                    @if (canResolve && Model.Status == "Active")
                    {
                        <a class="btn btn-success" asp-action="Resolve" asp-route-id="@Model.Id">
                            <i class="bi bi-check-circle"></i> Mark Resolved
                        </a>
                    }

                    <!-- Reactivate Button - Admin or Coordinator -->
                    @if (canResolve && Model.Status == "Resolved")
                    {
                        <a class="btn btn-warning" asp-action="Edit" asp-route-id="@Model.Id">
                            <i class="bi bi-arrow-clockwise"></i> Reactivate
                        </a>
                    }

                    <!-- Delete Button - Admin Only -->
                    @if (isAdmin)
                    {
                        <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#deleteModal">
                            <i class="bi bi-trash"></i> Delete
                        </button>
                    }

                    <a class="btn btn-secondary" asp-action="Index">
                        <i class="bi bi-arrow-left"></i> Back to List
                    </a>
                </div>

                <!-- Admin Only Info -->
                @if (isAdmin)
                {
                    <div class="mt-3 p-3 bg-light rounded">
                        <h6><i class="bi bi-shield-check"></i> Administrator View</h6>
                        <small class="text-muted">
                            User ID: @Model.ReportedById<br />
                            Disaster ID: @Model.Id
                        </small>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<!-- Delete Confirmation Modal (Admin Only) -->
@if (User.IsInRole("Admin"))
{
    <div class="modal fade" id="deleteModal" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header bg-danger text-white">
                    <h5 class="modal-title"><i class="bi bi-shield-exclamation"></i> Admin: Confirm Delete</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <div class="alert alert-warning">
                        <h6><i class="bi bi-exclamation-triangle"></i> Administrative Action</h6>
                        <p class="mb-0">You are performing an administrative delete. This will permanently remove the disaster report and cannot be undone.</p>
                    </div>
                    <p>Disaster: <strong>@Model.Name</strong></p>
                    <p>Location: <strong>@Model.Location</strong></p>
                    <p class="text-danger"><strong>Warning:</strong> This action is irreversible and should only be used for data cleanup.</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <form asp-action="Delete" method="post">
                        <input type="hidden" name="id" value="@Model.Id" />
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-danger">
                            <i class="bi bi-trash"></i> Permanently Delete
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
}

@functions {
    public string GetSeverityBadge(string severity)
    {
        return severity?.ToLower() switch
        {
            "low" => "bg-success",
            "medium" => "bg-warning",
            "high" => "bg-danger",
            "critical" => "bg-dark",
            _ => "bg-secondary"
        };
    }

    public string GetStatusBadge(string status)
    {
        return status?.ToLower() switch
        {
            "active" => "bg-danger",
            "resolved" => "bg-success",
            _ => "bg-secondary"
        };
    }
}