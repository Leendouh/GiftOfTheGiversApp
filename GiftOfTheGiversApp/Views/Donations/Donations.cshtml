@model IEnumerable<GiftOfTheGiversApp.Models.Donation>
@{
    ViewData["Title"] = "My Donations";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1><i class="bi bi-heart-fill"></i> My Donations</h1>
    <div>
        <a class="btn btn-primary" asp-action="Create">
            <i class="bi bi-plus-circle"></i> Make New Donation
        </a>
        <a class="btn btn-outline-secondary" asp-action="Index">
            <i class="bi bi-people"></i> All Donations
        </a>
    </div>
</div>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="card">
    <div class="card-header bg-success text-white">
        <h5 class="mb-0"><i class="bi bi-gift"></i> My Donation History</h5>
    </div>
    <div class="card-body">
        @if (!Model.Any())
        {
            <div class="alert alert-info">
                <h5>No donations yet</h5>
                <p>You haven't made any donations yet. <a asp-action="Create">Make your first donation</a> to help those in need.</p>
            </div>
        }
        else
        {
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead class="table-dark">
                        <tr>
                            <th>Resource</th>
                            <th>Category</th>
                            <th>Quantity</th>
                            <th>Date</th>
                            <th>Status</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var donation in Model)
                        {
                            <tr>
                                <td>
                                    <strong>@donation.Resource?.Name</strong>
                                    <br />
                                    <small class="text-muted">@donation.Resource?.Description</small>
                                </td>
                                <td>
                                    <span class="badge bg-info">@donation.Resource?.Category?.CategoryName</span>
                                </td>
                                <td>
                                    <span class="badge bg-primary">@donation.Quantity</span>
                                </td>
                                <td>@donation.DonationDate.ToString("MMM dd, yyyy")</td>
                                <td>
                                    <span class="badge @GetStatusBadge(donation.Status)">@donation.Status</span>
                                </td>
                                <td>
                                    <a class="btn btn-sm btn-info" asp-action="Details" asp-route-id="@donation.Id">
                                        <i class="bi bi-eye"></i> Details
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>
</div>

@functions {
    public string GetStatusBadge(string status)
    {
        return status?.ToLower() switch
        {
            "pending" => "bg-warning",
            "received" => "bg-info",
            "distributed" => "bg-success",
            _ => "bg-secondary"
        };
    }
}