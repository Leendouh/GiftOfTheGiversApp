@model List<GiftOfTheGiversApp.ViewModels.RoleManagementViewModel>
@using System.Security.Claims

@{
    ViewData["Title"] = "User Management";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h1 class="h2 fw-bold text-primary">
            <i class="bi bi-people me-2"></i>User Management
        </h1>
        <p class="text-muted mb-0">Manage user roles and permissions across the system</p>
    </div>
    <div>
        <a class="btn btn-outline-secondary" asp-action="Dashboard">
            <i class="bi bi-speedometer2 me-2"></i>Dashboard
        </a>
    </div>
</div>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show shadow-sm" role="alert">
        <i class="bi bi-check-circle-fill me-2"></i>@TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show shadow-sm" role="alert">
        <i class="bi bi-exclamation-triangle-fill me-2"></i>@TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<!-- Summary Cards -->
<div class="row mb-4">
    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card border-start-4 border-start-primary shadow-sm h-100">
            <div class="card-body">
                <div class="row align-items-center">
                    <div class="col">
                        <div class="text-xs fw-bold text-primary text-uppercase mb-1">Total Users</div>
                        <div class="h5 mb-0 fw-bold text-gray-800">@Model.Count</div>
                    </div>
                    <div class="col-auto">
                        <i class="bi bi-people fs-2 text-primary opacity-50"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card border-start-4 border-start-success shadow-sm h-100">
            <div class="card-body">
                <div class="row align-items-center">
                    <div class="col">
                        <div class="text-xs fw-bold text-success text-uppercase mb-1">Admins</div>
                        <div class="h5 mb-0 fw-bold text-gray-800">@Model.Count(u => u.CurrentRoles.Contains("Admin"))</div>
                    </div>
                    <div class="col-auto">
                        <i class="bi bi-shield-check fs-2 text-success opacity-50"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card border-start-4 border-start-warning shadow-sm h-100">
            <div class="card-body">
                <div class="row align-items-center">
                    <div class="col">
                        <div class="text-xs fw-bold text-warning text-uppercase mb-1">Coordinators</div>
                        <div class="h5 mb-0 fw-bold text-gray-800">@Model.Count(u => u.CurrentRoles.Contains("Coordinator"))</div>
                    </div>
                    <div class="col-auto">
                        <i class="bi bi-gear fs-2 text-warning opacity-50"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card border-start-4 border-start-info shadow-sm h-100">
            <div class="card-body">
                <div class="row align-items-center">
                    <div class="col">
                        <div class="text-xs fw-bold text-info text-uppercase mb-1">Volunteers</div>
                        <div class="h5 mb-0 fw-bold text-gray-800">@Model.Count(u => u.CurrentRoles.Contains("Volunteer"))</div>
                    </div>
                    <div class="col-auto">
                        <i class="bi bi-person-check fs-2 text-info opacity-50"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="card shadow-sm border-0">
    <div class="card-header bg-primary text-white py-3">
        <h5 class="mb-0"><i class="bi bi-list-check me-2"></i>System Users</h5>
    </div>
    <div class="card-body p-0">
        @if (!Model.Any())
        {
            <div class="text-center py-5">
                <i class="bi bi-people display-1 text-muted opacity-25"></i>
                <h5 class="text-muted mt-3">No Users Found</h5>
                <p class="text-muted">There are no users registered in the system yet.</p>
            </div>
        }
        else
        {
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="table-light">
                        <tr>
                            <th class="ps-4">User Information</th>
                            <th>Contact</th>
                            <th>Current Roles</th>
                            <th>Role Management</th>
                            <th class="text-center">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var user in Model)
                        {
                            <tr>
                                <td class="ps-4">
                                    <div class="d-flex align-items-center">
                                        <div class="bg-primary rounded-circle d-flex align-items-center justify-content-center me-3" style="width: 40px; height: 40px;">
                                            <i class="bi bi-person-fill text-white"></i>
                                        </div>
                                        <div>
                                            <strong class="text-primary">@user.FullName</strong>
                                            <br />
                                            <small class="text-muted">@user.UserName</small>
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    <div class="small">
                                        <div><i class="bi bi-envelope me-2 text-muted"></i>@user.Email</div>
                                        @if (!string.IsNullOrEmpty(user.PhoneNumber))
                                        {
                                            <div><i class="bi bi-phone me-2 text-muted"></i>@user.PhoneNumber</div>
                                        }
                                    </div>
                                </td>
                                <td>
                                    <div class="d-flex flex-wrap gap-1">
                                        @foreach (var role in user.CurrentRoles)
                                        {
                                            <span class="badge @GetRoleBadge(role) px-2 py-1">@role</span>
                                        }
                                        @if (!user.CurrentRoles.Any())
                                        {
                                            <span class="badge bg-secondary px-2 py-1">Public User</span>
                                        }
                                    </div>
                                </td>
                                <td>
                                    <form asp-action="UpdateRoles" method="post" class="role-form">
                                        <input type="hidden" name="userId" value="@user.UserId" />
                                        <div class="d-flex flex-wrap gap-3">
                                            @foreach (var role in user.AvailableRoles)
                                            {
                                                <div class="form-check">
                                                    <input class="form-check-input role-checkbox"
                                                           type="checkbox"
                                                           name="selectedRoles"
                                                           value="@role"
                                                           data-user="@user.FullName"
                                                           data-role="@role"
                                                    @(user.CurrentRoles.Contains(role) ? "checked" : "") />
                                                    <label class="form-check-label small fw-medium">@role</label>
                                                </div>
                                            }
                                        </div>
                                        <button type="submit" class="btn btn-sm btn-primary mt-2">
                                            <i class="bi bi-check-lg me-1"></i>Update Roles
                                        </button>
                                    </form>
                                </td>
                                <td class="text-center">
                                    <div class="btn-group btn-group-sm" role="group">
                                        <button type="button" class="btn btn-outline-info"
                                                onclick="viewUserDetails('@user.UserId', '@user.FullName', '@user.Email')"
                                                data-bs-toggle="tooltip" title="View Details">
                                            <i class="bi bi-eye"></i>
                                        </button>
                                        <a href="mailto:@user.Email" class="btn btn-outline-primary"
                                           data-bs-toggle="tooltip" title="Send Email">
                                            <i class="bi bi-envelope"></i>
                                        </a>
                                        @if (user.UserId != User.FindFirstValue(ClaimTypes.NameIdentifier))
                                        {
                                            <form asp-action="DeleteUser" method="post" class="d-inline"
                                                  onsubmit="return confirmDelete('@user.FullName');">
                                                <input type="hidden" name="userId" value="@user.UserId" />
                                                @Html.AntiForgeryToken()
                                                <button type="submit" class="btn btn-outline-danger"
                                                        data-bs-toggle="tooltip" title="Delete User">
                                                    <i class="bi bi-trash"></i>
                                                </button>
                                            </form>
                                        }
                                        else
                                        {
                                            <button class="btn btn-outline-secondary" disabled
                                                    data-bs-toggle="tooltip" title="Cannot delete your own account">
                                                <i class="bi bi-trash"></i>
                                            </button>
                                        }
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>
</div>

<!-- User Details Modal -->
<div class="modal fade" id="userDetailsModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header bg-info text-white">
                <h5 class="modal-title"><i class="bi bi-person-badge me-2"></i>User Details</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body" id="userDetailsContent">
                <!-- Content will be loaded via JavaScript -->
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function viewUserDetails(userId, userName, userEmail) {
            const content = `
                                <div class="row">
                                    <div class="col-md-6">
                                        <h6 class="text-primary">Basic Information</h6>
                                        <dl class="row small">
                                            <dt class="col-sm-4">Full Name:</dt>
                                            <dd class="col-sm-8">${userName}</dd>

                                            <dt class="col-sm-4">Email:</dt>
                                            <dd class="col-sm-8">${userEmail}</dd>

                                            <dt class="col-sm-4">User ID:</dt>
                                            <dd class="col-sm-8"><code>${userId}</code></dd>
                                        </dl>
                                    </div>
                                    <div class="col-md-6">
                                        <h6 class="text-primary">Account Status</h6>
                                        <div class="alert alert-success small">
                                            <i class="bi bi-check-circle-fill me-2"></i>
                                            Account is active and in good standing
                                        </div>
                                        <p class="small text-muted">
                                            Last login: Recently<br>
                                            Account created: @DateTime.Now.AddMonths(-1).ToString("MMM dd, yyyy")
                                        </p>
                                    </div>
                                </div>
                                <div class="mt-3">
                                    <h6 class="text-primary">Advanced Details</h6>
                                    <p class="small text-muted mb-0">
                                        <i class="bi bi-info-circle me-1"></i>
                                        Detailed user analytics and activity logs would be displayed here in a production environment.
                                    </p>
                                </div>
                            `;
            document.getElementById('userDetailsContent').innerHTML = content;
            new bootstrap.Modal(document.getElementById('userDetailsModal')).show();
        }

        function confirmDelete(userName) {
            return confirm(`Are you sure you want to permanently delete user "${userName}"?\n\nThis action cannot be undone and will remove all associated data.`);
        }

        // Auto-close alerts after 5 seconds
        setTimeout(() => {
            document.querySelectorAll('.alert').forEach(alert => {
                bootstrap.Alert.getOrCreateInstance(alert).close();
            });
        }, 5000);

        // Initialize tooltips
        const tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'));
        const tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
            return new bootstrap.Tooltip(tooltipTriggerEl);
        });

        // Role change confirmation
        document.querySelectorAll('.role-checkbox').forEach(checkbox => {
            checkbox.addEventListener('change', function () {
                const userName = this.getAttribute('data-user');
                const roleName = this.getAttribute('data-role');
                const action = this.checked ? 'grant' : 'revoke';

                console.log(`${action} ${roleName} role for ${userName}`);
            });
        });
    </script>
}

@functions {
    public string GetRoleBadge(string role)
    {
        return role?.ToLower() switch
        {
            "admin" => "bg-danger",
            "coordinator" => "bg-warning",
            "volunteer" => "bg-success",
            "donor" => "bg-info",
            _ => "bg-secondary"
        };
    }
}