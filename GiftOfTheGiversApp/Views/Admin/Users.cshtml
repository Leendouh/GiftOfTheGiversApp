@model List<RoleManagementViewModel>
@using System.Security.Claims

@{
    ViewData["Title"] = "User Management";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1><i class="bi bi-people"></i> User Management</h1>
    <a class="btn btn-secondary" asp-action="Dashboard">
        <i class="bi bi-speedometer2"></i> Admin Dashboard
    </a>
</div>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="card">
    <div class="card-header bg-primary text-white">
        <h5 class="mb-0"><i class="bi bi-list-check"></i> System Users</h5>
    </div>
    <div class="card-body">
        @if (!Model.Any())
        {
            <div class="alert alert-info">
                <h5>No users found</h5>
                <p>There are no users in the system yet.</p>
            </div>
        }
        else
        {
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead class="table-dark">
                        <tr>
                            <th>User</th>
                            <th>Email</th>
                            <th>Current Roles</th>
                            <th>Role Management</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var user in Model)
                        {
                            <tr>
                                <td>
                                    <strong>@user.FullName</strong>
                                    <br />
                                    <small class="text-muted">@user.UserName</small>
                                </td>
                                <td>@user.Email</td>
                                <td>
                                    @foreach (var role in user.CurrentRoles)
                                    {
                                        <span class="badge @GetRoleBadge(role)">@role</span>
                                    }
                                    @if (!user.CurrentRoles.Any())
                                    {
                                        <span class="badge bg-secondary">Public User</span>
                                    }
                                </td>
                                <td>
                                    <form asp-action="UpdateRoles" method="post" class="role-form">
                                        <input type="hidden" name="userId" value="@user.UserId" />
                                        <div class="d-flex flex-wrap gap-2">
                                            @foreach (var role in user.AvailableRoles)
                                            {
                                                <div class="form-check">
                                                    <input class="form-check-input"
                                                           type="checkbox"
                                                           name="selectedRoles"
                                                           value="@role"
                                                    @(user.CurrentRoles.Contains(role) ? "checked" : "") />
                                                    <label class="form-check-label small">@role</label>
                                                </div>
                                            }
                                        </div>
                                        <button type="submit" class="btn btn-sm btn-primary mt-2">
                                            <i class="bi bi-check-lg"></i> Update Roles
                                        </button>
                                    </form>
                                </td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <button type="button" class="btn btn-sm btn-info"
                                                onclick="viewUserDetails('@user.UserId', '@user.FullName')">
                                            <i class="bi bi-eye"></i>
                                        </button>
                                        <a href="mailto:@user.Email" class="btn btn-sm btn-outline-primary">
                                            <i class="bi bi-envelope"></i>
                                        </a>
                                        <!-- DELETE BUTTON - Only show if not current user -->
                                        @if (user.UserId != User.FindFirstValue(ClaimTypes.NameIdentifier))
                                        {
                                            <form asp-action="DeleteUser" method="post" class="d-inline"
                                                  onsubmit="return confirm('Are you sure you want to delete user: @user.FullName? This action cannot be undone.');">
                                                <input type="hidden" name="userId" value="@user.UserId" />
                                                @Html.AntiForgeryToken()
                                                <button type="submit" class="btn btn-sm btn-danger">
                                                    <i class="bi bi-trash"></i>
                                                </button>
                                            </form>
                                        }
                                        else
                                        {
                                            <button class="btn btn-sm btn-outline-secondary" disabled title="Cannot delete your own account">
                                                <i class="bi bi-trash"></i>
                                            </button>
                                        }
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>
</div>

<!-- User Details Modal -->
<div class="modal fade" id="userDetailsModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-info text-white">
                <h5 class="modal-title">User Details</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body" id="userDetailsContent">
                <!-- Content will be loaded via JavaScript -->
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function viewUserDetails(userId, userName) {
            // For now, just show basic info
            const content = `
                        <h6>User Information</h6>
                        <p><strong>Name:</strong> ${userName}</p>
                        <p><strong>User ID:</strong> ${userId}</p>
                        <p><em>Advanced user details would be loaded here in a real implementation.</em></p>
                    `;
            document.getElementById('userDetailsContent').innerHTML = content;
            new bootstrap.Modal(document.getElementById('userDetailsModal')).show();
        }

        // Auto-close alerts
        setTimeout(() => {
            document.querySelectorAll('.alert').forEach(alert => {
                bootstrap.Alert.getOrCreateInstance(alert).close();
            });
        }, 5000);
    </script>
}

@functions {
    public string GetRoleBadge(string role)
    {
        return role?.ToLower() switch
        {
            "admin" => "bg-danger",
            "coordinator" => "bg-warning",
            "volunteer" => "bg-success",
            "donor" => "bg-info",
            _ => "bg-secondary"
        };
    }
}