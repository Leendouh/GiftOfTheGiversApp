@model GiftOfTheGiversApp.Models.Mission
@{
    ViewData["Title"] = "Mission Details";

    // Get assignments from ViewBag (set in the controller)
    var missionAssignments = ViewBag.Assignments as List<Assignment> ?? new List<Assignment>();
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1><i class="bi bi-eye"></i> Mission Details</h1>
    <div>
        <a class="btn btn-outline-secondary" asp-action="Index">
            <i class="bi bi-arrow-left"></i> Back to Missions
        </a>
    </div>
</div>

<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header @GetStatusHeaderClass(Model.Status)">
                <h5 class="mb-0">@Model.Title</h5>
            </div>
            <div class="card-body">
                <div class="row mb-4">
                    <div class="col-md-6">
                        <span class="badge @GetStatusBadge(Model.Status) fs-6">@Model.Status</span>
                        <span class="badge bg-info fs-6">Priority: @Model.Priority</span>
                    </div>
                    <div class="col-md-6 text-end">
                        <small class="text-muted">
                            Created: @Model.CreatedDate.ToString("MMM dd, yyyy")<br>
                            By: @Model.CreatedBy?.FullName
                        </small>
                    </div>
                </div>

                <p class="lead">@Model.Description</p>

                <div class="row">
                    <div class="col-md-6">
                        <h6><i class="bi bi-info-circle"></i> Mission Information</h6>
                        <dl>
                            <dt>Disaster:</dt>
                            <dd>@Model.Disaster?.Name</dd>

                            <dt>Location:</dt>
                            <dd>@Model.Disaster?.Location</dd>

                            <dt>Created Date:</dt>
                            <dd>@Model.CreatedDate.ToString("MMMM dd, yyyy")</dd>

                            @if (Model.DueDate.HasValue)
                            {
                                <dt>Due Date:</dt>
                                <dd>@Model.DueDate.Value.ToString("MMMM dd, yyyy")</dd>
                            }
                        </dl>
                    </div>
                    <div class="col-md-6">
                        <h6><i class="bi bi-people"></i> Assignment Information</h6>
                        <dl>
                            <dt>Assigned To:</dt>
                            <dd>@(Model.AssignedTo?.User?.FullName ?? "Not assigned")</dd>

                            <dt>Priority:</dt>
                            <dd>@Model.Priority</dd>

                            <dt>Status:</dt>
                            <dd>@Model.Status</dd>
                        </dl>
                    </div>
                </div>

                <!-- Related Assignments Section -->
                @if (missionAssignments.Any())
                {
                    <div class="mt-4">
                        <h6><i class="bi bi-list-task"></i> Related Assignments</h6>
                        <div class="table-responsive">
                            <table class="table table-sm">
                                <thead>
                                    <tr>
                                        <th>Volunteer</th>
                                        <th>Role</th>
                                        <th>Status</th>
                                        <th>Assigned Date</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var assignment in missionAssignments)
                                    {
                                        <tr>
                                            <td>@assignment.Volunteer?.User?.FullName</td>
                                            <td><span class="badge bg-info">@assignment.RoleInAssignment</span></td>
                                            <td><span class="badge @GetAssignmentStatusBadge(assignment.Status)">@assignment.Status</span></td>
                                            <td>@assignment.AssignmentDate.ToString("MMM dd, yyyy")</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <!-- Quick Actions -->
        <div class="card">
            <div class="card-header bg-info text-white">
                <h6 class="mb-0">Quick Actions</h6>
            </div>
            <div class="card-body">
                <div class="d-grid gap-2">
                    @if (User.IsInRole("Admin") || User.IsInRole("Coordinator"))
                    {
                        <a class="btn btn-warning" asp-action="Edit" asp-route-id="@Model.Id">
                            <i class="bi bi-pencil"></i> Edit Mission
                        </a>
                        <a class="btn btn-success" asp-controller="Assignments" asp-action="Create">
                            <i class="bi bi-person-plus"></i> Assign Volunteers
                        </a>

                        <hr />

                        <h6>Update Status:</h6>
                        <form asp-action="UpdateStatus" method="post" class="d-inline w-100">
                            <input type="hidden" name="id" value="@Model.Id" />
                            <div class="btn-group w-100">
                                <button type="submit" name="status" value="Open" class="btn btn-sm btn-primary">Open</button>
                                <button type="submit" name="status" value="In Progress" class="btn btn-sm btn-warning">In Progress</button>
                                <button type="submit" name="status" value="Completed" class="btn btn-sm btn-success">Complete</button>
                            </div>
                        </form>
                    }
                    else
                    {
                        <a class="btn btn-outline-primary" asp-controller="Volunteers" asp-action="Index">
                            <i class="bi bi-person"></i> Update Availability
                        </a>
                    }
                </div>
            </div>
        </div>

        <!-- Disaster Info -->
        @if (Model.Disaster != null)
        {
            <div class="card mt-3">
                <div class="card-header bg-warning text-dark">
                    <h6 class="mb-0">Disaster Information</h6>
                </div>
                <div class="card-body">
                    <h6>@Model.Disaster.Name</h6>
                    <p class="small">@Model.Disaster.Description</p>
                    <small class="text-muted">
                        <strong>Location:</strong> @Model.Disaster.Location<br>
                        <strong>Type:</strong> @Model.Disaster.DisasterType<br>
                        <strong>Status:</strong> @Model.Disaster.Status
                    </small>
                </div>
            </div>
        }
    </div>
</div>

@functions {
    public string GetStatusBadge(string status)
    {
        return status?.ToLower() switch
        {
            "open" => "bg-primary",
            "in progress" => "bg-warning",
            "completed" => "bg-success",
            "cancelled" => "bg-danger",
            _ => "bg-secondary"
        };
    }

    public string GetStatusHeaderClass(string status)
    {
        return status?.ToLower() switch
        {
            "open" => "bg-primary text-white",
            "in progress" => "bg-warning text-dark",
            "completed" => "bg-success text-white",
            "cancelled" => "bg-danger text-white",
            _ => "bg-secondary text-white"
        };
    }

    public string GetAssignmentStatusBadge(string status)
    {
        return status?.ToLower() switch
        {
            "assigned" => "bg-primary",
            "completed" => "bg-success",
            "cancelled" => "bg-danger",
            _ => "bg-secondary"
        };
    }
}