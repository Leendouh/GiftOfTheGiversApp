@model GiftOfTheGiversApp.ViewModels.MissionViewModel

@{
    ViewData["Title"] = "Create Mission";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1><i class="bi bi-plus-circle"></i> Create New Mission</h1>
    <div>
        <a class="btn btn-outline-secondary" asp-action="Index">
            <i class="bi bi-arrow-left"></i> Back to Missions
        </a>
    </div>
</div>

<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header bg-primary text-white">
                <h5 class="mb-0">Mission Details</h5>
            </div>
            <div class="card-body">
                <form asp-action="Create">

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label asp-for="DisasterId" class="form-label">Disaster *</label>
                                <select asp-for="DisasterId" asp-items="Model.Disasters" class="form-select">
                                    <option value="">Select Disaster</option>
                                </select>
                                <span asp-validation-for="DisasterId" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label asp-for="AssignedToId" class="form-label">Assign To</label>
                                <select asp-for="AssignedToId" asp-items="Model.Volunteers" class="form-select">
                                    <option value="">Select Volunteer (Optional)</option>
                                </select>
                                <span asp-validation-for="AssignedToId" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="Title" class="form-label">Mission Title *</label>
                        <input asp-for="Title" class="form-control" placeholder="Enter mission title" />
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="Description" class="form-label">Description *</label>
                        <textarea asp-for="Description" class="form-control" rows="4" placeholder="Enter mission description"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>

                    <div class="row">
                        <div class="col-md-4">
                            <div class="form-group mb-3">
                                <label asp-for="Status" class="form-label">Status *</label>
                                <select asp-for="Status" class="form-select">
                                    <option value="Open">Open</option>
                                    <option value="In Progress">In Progress</option>
                                    <option value="Completed">Completed</option>
                                    <option value="Cancelled">Cancelled</option>
                                </select>
                                <span asp-validation-for="Status" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group mb-3">
                                <label asp-for="Priority" class="form-label">Priority *</label>
                                <select asp-for="Priority" class="form-select">
                                    <option value="Low">Low</option>
                                    <option value="Medium" selected>Medium</option>
                                    <option value="High">High</option>
                                    <option value="Critical">Critical</option>
                                </select>
                                <span asp-validation-for="Priority" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group mb-3">
                                <label asp-for="DueDate" class="form-label">Due Date</label>
                                <input asp-for="DueDate" type="date" class="form-control" />
                                <span asp-validation-for="DueDate" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="form-group mt-4">
                        <button type="submit" class="btn btn-primary me-2">
                            <i class="bi bi-check-circle"></i> Create Mission
                        </button>
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="bi bi-x-circle"></i> Cancel
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card">
            <div class="card-header bg-info text-white">
                <h6 class="mb-0"><i class="bi bi-info-circle"></i> Creating Missions</h6>
            </div>
            <div class="card-body">
                <p class="small">
                    <strong>Mission Title:</strong> Provide a clear, concise title for the mission.
                </p>
                <p class="small">
                    <strong>Description:</strong> Include detailed information about the mission objectives and requirements.
                </p>
                <p class="small">
                    <strong>Priority Levels:</strong>
                </p>
                <ul class="small">
                    <li><span class="badge bg-success">Low</span> - Standard mission</li>
                    <li><span class="badge bg-info">Medium</span> - Important mission</li>
                    <li><span class="badge bg-warning">High</span> - Urgent mission</li>
                    <li><span class="badge bg-danger">Critical</span> - Emergency mission</li>
                </ul>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        // Set minimum date for due date to today
        document.addEventListener('DOMContentLoaded', function () {
            const dueDateInput = document.getElementById('DueDate');
            if (dueDateInput) {
                const today = new Date().toISOString().split('T')[0];
                dueDateInput.min = today;
            }
        });
    </script>
}