@model IEnumerable<GiftOfTheGiversApp.Models.Mission>
@using GiftOfTheGiversApp.Extensions
@{
    ViewData["Title"] = "All Missions";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1><i class="bi bi-compass"></i> All Missions</h1>
    <div>
        <a class="btn btn-outline-primary" asp-action="Missions">
            <i class="bi bi-person"></i> My Missions
        </a>
        @if (User.IsInRole("Admin") || User.IsInRole("Coordinator"))
        {
            <a class="btn btn-primary" asp-action="Create">
                <i class="bi bi-plus-circle"></i> New Mission
            </a>
        }
    </div>
</div>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="card">
    <div class="card-header bg-primary text-white">
        <h5 class="mb-0"><i class="bi bi-list-check"></i> Active Missions</h5>
    </div>
    <div class="card-body">
        @if (!Model.Any())
        {
            <div class="alert alert-info">
                <h5>No missions found</h5>
                <p>There are no missions in the system yet.</p>
            </div>
        }
        else
        {
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>Title</th>
                            <th>Disaster</th>
                            <th>Assigned To</th>
                            <th>Status</th>
                            <th>Priority</th>
                            <th>Due Date</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var mission in Model)
                        {
                            <tr>
                                <td>
                                    <strong>@mission.Title</strong>
                                    <br>
                                    <small class="text-muted">@mission.Description.Truncate(50)</small>
                                </td>
                                <td>@mission.Disaster?.Name</td>
                                <td>@mission.AssignedTo?.User?.FullName</td>
                                <td><span class="badge @GetStatusBadge(mission.Status)">@mission.Status</span></td>
                                <td><span class="badge @GetPriorityBadge(mission.Priority)">@mission.Priority</span></td>
                                <td>
                                    @if (mission.DueDate.HasValue)
                                    {
                                        @mission.DueDate.Value.ToString("MMM dd, yyyy")
                                    }
                                    else
                                    {
                                        <span class="text-muted">Not set</span>
                                    }
                                </td>
                                <td>
                                    <div class="btn-group btn-group-sm">
                                        <a class="btn btn-info" asp-action="Details" asp-route-id="@mission.Id">
                                            <i class="bi bi-eye"></i> Details
                                        </a>
                                        @if (User.IsInRole("Admin") || User.IsInRole("Coordinator"))
                                        {
                                            <a class="btn btn-warning" asp-action="Edit" asp-route-id="@mission.Id">
                                                <i class="bi bi-pencil"></i> Edit
                                            </a>
                                        }
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>
</div>

@functions {
    public string GetStatusBadge(string status)
    {
        return status?.ToLower() switch
        {
            "open" => "bg-primary",
            "in progress" => "bg-warning",
            "completed" => "bg-success",
            "cancelled" => "bg-danger",
            _ => "bg-secondary"
        };
    }

    public string GetPriorityBadge(string priority)
    {
        return priority?.ToLower() switch
        {
            "low" => "bg-success",
            "medium" => "bg-info",
            "high" => "bg-warning",
            "critical" => "bg-danger",
            _ => "bg-secondary"
        };
    }
}